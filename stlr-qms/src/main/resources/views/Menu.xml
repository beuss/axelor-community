<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<menuitem name="menu-qms-root" order="-100" if="__config__.app.isApp('qms')" title="QMS" icon="fa-check" icon-background="#3f6bb9"/>

	<menuitem name="qms-improvement-forms-root" parent="menu-qms-root" title="Improvement forms" />

	<menuitem name="qms-improvement-forms-all" parent="qms-improvement-forms-root" title="Improvement forms list" action="qms.improvementForm.all"/>

	<action-view name="qms.improvementForm.all" title="Improvement forms" model="com.axelor.apps.qms.db.ImprovementForm">
		<view type="grid" name="qms-improvement-form-grid"/>
		<view type="form" name="qms-improvement-form-form"/>
	</action-view>

	<menuitem name="qms-improvement-forms-mine" parent="qms-improvement-forms-root" title="My improvement forms" action="qms.improvementForm.mine"/>

	<action-view name="qms.improvementForm.mine" model="com.axelor.apps.qms.db.ImprovementForm" title="My improvement forms">
		<view name="qms-improvement-form-grid" type="grid"/>
		<view name="qms-improvement-form-form" type="form"/>
		<domain>self.createdBy = :__user__ OR (select employee.id from User u where u = :__user__) in (select id from self.responsibles)</domain>
	</action-view>

	<menuitem name="qms-improvement-forms-dashboard" parent="qms-improvement-forms-root" title="Dashboard" action="qms.improvementForm.dashboard"/>

	<action-view name="qms.improvementForm.dashboard" title="Dashboard" model="com.axelor.apps.qms.db.ImprovementForm">
        <view type="dashboard" name="qms.improvementForm.dashboard.1" />
	</action-view>
</object-views>